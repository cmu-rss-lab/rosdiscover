FROM alpine:3.9
RUN apk add --no-cache \
      git \
      python3-dev \
      libffi-dev \
      musl-dev \
      libressl-dev \
      openssl-dev \
      cargo \
      py3-pip \
      build-base \
      docker \
      gcc \
      linux-headers \
      openjdk8 \
      bash \
      less \
 && rm -rf /tmp/*

WORKDIR /code
ENV CRYPTOGRAPHY_DONT_BUILD_RUST=1
RUN /bin/sh -c python -m ensurepip --upgrade
RUN CRYPTOGRAPHY_DONT_BUILD_RUST=1 pip3 install --no-binary cryptography pipenv cryptography

ENTRYPOINT ["/bin/bash"]

